{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: icx 生成活动文件",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-fopenmp",
                "-I\"C:/Program Files (x86)/Intel/oneAPI/mkl/latest/include\"",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-L\"C:/Program Files (x86)/Intel/oneAPI/mkl/latest/lib/\"",
                "-lmkl_intel_lp64",
                "-lmkl_sequential",
                "-lmkl_core"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "CPATH": "C:/Program Files (x86)/Intel/oneAPI/mkl/latest/include;D:/eigen",
                    "LIBRARY_PATH": "C:/Program Files (x86)/Intel/oneAPI/mkl/latest/lib"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: icx" 
        }
    ]
}